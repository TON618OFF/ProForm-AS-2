<Window x:Class="ProForm.AdminClients"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProForm"
        mc:Ignorable="d"
        Title="Админ: Окно Клиентов" 
        Height="720"
        Width="1280"
        Background="#052F43"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanMinimize"
        Icon="/icons/program_icon.png" >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1.5*"/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <DataGrid x:Name="ClientsTable"
                  Grid.ColumnSpan="3"
                  Grid.RowSpan="8"
                  Background="#264F62"
                  Foreground="White"
                  IsReadOnly="True"
                  CanUserReorderColumns="False" 
                  CanUserAddRows="False" 
                  CanUserDeleteRows="False" 
                  AutoGenerateColumns="False"
                  SelectionChanged="ClientsTable_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Фамилия" Binding="{Binding ClientSurname}" />
                <DataGridTextColumn Header="Имя" Binding="{Binding ClientName}" />
                <DataGridTextColumn Header="Отчество" Binding="{Binding ClientMiddleName}" />
                <DataGridTextColumn Header="Дата Рождения" Binding="{Binding ClientBirthdayDate}" />
                <DataGridTextColumn Header="Телефон" Binding="{Binding ClientPhoneNumber}" />
                <DataGridTextColumn Header="Почта" Binding="{Binding ClientEmail}" />
                <DataGridTextColumn Header="Дата Оплаты Абонемента" Binding="{Binding ClientSubscriptionStartDate}" />
            </DataGrid.Columns>
        </DataGrid>

        <TextBox x:Name="ClientSurname"
                  Grid.Column="3"
                  Grid.Row="0"
                  Background="#264F62"
                  Foreground="White"
                  VerticalAlignment="Center"
                  HorizontalAlignment="Center"
                  Width="250"
                  Height="40"
                  Padding="10"
                  materialDesign:HintAssist.Hint="Фамилия Клиента"/>

        <TextBox x:Name="ClientName"
                  Grid.Column="3"
                  Grid.Row="1"
                  Background="#264F62"
                  Foreground="White"
                  VerticalAlignment="Center"
                  HorizontalAlignment="Center"
                  Width="250"
                  Height="40"
                  Padding="10"
                  materialDesign:HintAssist.Hint="Имя Клиента"/>

        <TextBox x:Name="ClientMiddleName"
                  Grid.Column="3"
                  Grid.Row="2"
                  Background="#264F62"
                  Foreground="White"
                  VerticalAlignment="Center"
                  HorizontalAlignment="Center"
                  Width="250"
                  Height="40"
                  Padding="10"
                  materialDesign:HintAssist.Hint="Отчество Клиента"/>

        <TextBox x:Name="ClientBirthday"
                  Grid.Column="3"
                  Grid.Row="3"
                  Background="#264F62"
                  Foreground="White"
                  VerticalAlignment="Center"
                  HorizontalAlignment="Center"
                  Width="250"
                  Height="40"
                  Padding="10"
                  materialDesign:HintAssist.Hint="Дата Рождения Клиента"/>

        <TextBox x:Name="ClientPhoneNumber"
                  Grid.Column="3"
                  Grid.Row="4"
                  Background="#264F62"
                  Foreground="White"
                  VerticalAlignment="Center"
                  HorizontalAlignment="Center"
                  Width="250"
                  Height="40"
                  Padding="10"
                  materialDesign:HintAssist.Hint="Номер Телефона Клиента"/>

        <TextBox x:Name="ClientEmail"
                  Grid.Column="3"
                  Grid.Row="5"
                  Background="#264F62"
                  Foreground="White"
                  VerticalAlignment="Center"
                  HorizontalAlignment="Center"
                  Width="250"
                  Height="40"
                  Padding="10"
                  materialDesign:HintAssist.Hint="Почта Клиента"/>

        <TextBox x:Name="ClientPurchaseDate"
                  Grid.Column="3"
                  Grid.Row="6"
                  Background="#264F62"
                  Foreground="White"
                  VerticalAlignment="Center"
                  HorizontalAlignment="Center"
                  Width="250"
                  Height="40"
                  Padding="10"
                  materialDesign:HintAssist.Hint="Дата Оплаты"/>

        <Button x:Name="ExitBtn"
                Grid.Row="10"
                Grid.Column="3"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Height="40"
                Width="250"
                Content="Выйти"
                FontSize="20"
                BorderBrush="White"
                Background="#622626"
                BorderThickness="2"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                Click="ExitBtn_Click"/>

        <Button x:Name="CreateBtn"
                Grid.Row="8"
                Grid.Column="2"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Height="40"
                Width="175"
                Content="Создать"
                FontSize="20"
                BorderBrush="White"
                Background="#264F62"
                BorderThickness="2"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"/>

        <Button x:Name="DeleteBtn"
                Grid.Row="9"
                Grid.Column="2"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Height="40"
                Width="175"
                Content="Удалить"
                FontSize="20"
                BorderBrush="White"
                Background="#264F62"
                BorderThickness="2"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"/>

        <Button x:Name="EditBtn"
                Grid.Row="10"
                Grid.Column="2"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Height="40"
                Width="175"
                Content="Изменить"
                FontSize="20"
                BorderBrush="White"
                Background="#264F62"
                BorderThickness="2"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"/>

        <Button x:Name="SubscriptionBtn"
                Grid.Row="8"
                Grid.Column="1"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Height="40"
                Width="175"
                Content="Абонементы"
                FontSize="20"
                BorderBrush="White"
                Background="#264F62"
                BorderThickness="2"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                Click="SubscriptionBtn_Click"/>

        <Button x:Name="ScheduleBtn"
                Grid.Row="9"
                Grid.Column="1"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Height="40"
                Width="175"
                Content="Расписание"
                FontSize="20"
                BorderBrush="White"
                Background="#264F62"
                BorderThickness="2"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                Click="ScheduleBtn_Click"/>

        <Button x:Name="PaymentsBtn"
                Grid.Row="10"
                Grid.Column="1"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Height="40"
                Width="175"
                Content="Оплаты"
                FontSize="20"
                BorderBrush="White"
                Background="#264F62"
                BorderThickness="2"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                Click="PaymentsBtn_Click"/>
    </Grid>
</Window>
