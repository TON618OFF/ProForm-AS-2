<Window x:Class="ProForm.AdminPayments"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProForm"
        mc:Ignorable="d"
        Title="Администратор: Окно Оплат"
        Height="720"
        Width="1280"
        Background="#052F43"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanMinimize"
        Icon="/icons/program_icon.png">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1.5*"/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <DataGrid x:Name="PaymentsTable"
                  Grid.ColumnSpan="3"
                  Grid.RowSpan="8"
                  Background="#264F62"
                  Foreground="White"
                  IsReadOnly="True"
                  CanUserReorderColumns="False" 
                  CanUserAddRows="False" 
                  CanUserDeleteRows="False" 
                  AutoGenerateColumns="False"
                  SelectionChanged="PaymentsTable_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Клиент" Binding="{Binding Clients.ClientFullName}" Width="*" />
                <DataGridTextColumn Header="Дата Оплаты" Binding="{Binding PaymentDate}" Width="*" />
                <DataGridTextColumn Header="Стоимость Оплаты" Binding="{Binding PaymentAmount}" Width="*" />
                <DataGridTextColumn Header="Метод Оплаты" Binding="{Binding PaymentMethods.PaymentMethodTitle}" Width="*" />
                <DataGridTextColumn Header="Дата Окончания Абонемента" Binding="{Binding PaymentMembershipEndDate}" Width="*" />
                <DataGridTextColumn Header="Номер Оплаты (Чек)" Binding="{Binding PaymentReceiptNumber}" Width="*" />
                <DataGridTextColumn Header="Абонемент" Binding="{Binding Subscriptions.TypeSubscription.TypeTitle}" Width="*" />
                <DataGridTextColumn Header="Доп. Услуга" Binding="{Binding AdditionalServices.AdditionalServiceTitle}" Width="*" />
            </DataGrid.Columns>
        </DataGrid>

        <ComboBox x:Name="PaymentsClientID"
                  Grid.Column="3"
                  Grid.Row="0"
                  Background="#264F62"
                  Foreground="Black"
                  VerticalAlignment="Center"
                  HorizontalAlignment="Center"
                  Width="250"
                  Height="40"
                  Padding="10"
                  materialDesign:HintAssist.Hint="Клиент"/>

        <TextBox x:Name="PaymentsPaymentDate"
                  Grid.Column="3"
                  Grid.Row="1"
                  Background="#264F62"
                  Foreground="Black"
                  VerticalAlignment="Center"
                  HorizontalAlignment="Center"
                  Width="250"
                  Height="40"
                  Padding="10"
                  materialDesign:HintAssist.Hint="Дата Оплаты"/>

        <TextBox x:Name="PaymentsPaymentAmount"
                  Grid.Column="3"
                  Grid.Row="2"
                  Background="#264F62"
                  Foreground="Black"
                  VerticalAlignment="Center"
                  HorizontalAlignment="Center"
                  Width="250"
                  Height="40"
                  Padding="10"
                  materialDesign:HintAssist.Hint="Стоимость Оплаты"/>

        <ComboBox x:Name="PaymentsPaymentMethodID"
                  Grid.Column="3"
                  Grid.Row="3"
                  Background="#264F62"
                  Foreground="Black"
                  VerticalAlignment="Center"
                  HorizontalAlignment="Center"
                  Width="250"
                  Height="40"
                  Padding="10"
                  materialDesign:HintAssist.Hint="Метод Оплаты"/>

        <TextBox x:Name="PaymentsPaymentMembershipEndDate"
                  Grid.Column="3"
                  Grid.Row="4"
                  Background="#264F62"
                  Foreground="Black"
                  VerticalAlignment="Center"
                  HorizontalAlignment="Center"
                  Width="250"
                  Height="40"
                  Padding="10"
                  materialDesign:HintAssist.Hint="Дата Окончания Абонемента"/>

        <TextBox x:Name="PaymentsPaymentReceiptNumber"
                  Grid.Column="3"
                  Grid.Row="5"
                  Background="#264F62"
                  Foreground="Black"
                  VerticalAlignment="Center"
                  HorizontalAlignment="Center"
                  Width="250"
                  Height="40"
                  Padding="10"
                  materialDesign:HintAssist.Hint="Номер Оплаты (Чек)"/>

        <ComboBox x:Name="PaymentsPaymentMembershipID"
                  Grid.Column="3"
                  Grid.Row="6"
                  Background="#264F62"
                  Foreground="Black"
                  VerticalAlignment="Center"
                  HorizontalAlignment="Center"
                  Width="250"
                  Height="40"
                  Padding="10"
                  materialDesign:HintAssist.Hint="Абонемент"/>

        <ComboBox x:Name="PaymentsPaymentServiceID"
                  Grid.Column="3"
                  Grid.Row="7"
                  Background="#264F62"
                  Foreground="Black"
                  VerticalAlignment="Center"
                  HorizontalAlignment="Center"
                  Width="250"
                  Height="40"
                  Padding="10"
                  materialDesign:HintAssist.Hint="Доп. Услуга"/>

        <Button x:Name="ExitBtn"
                Grid.Row="10"
                Grid.Column="3"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Height="40"
                Width="250"
                Content="Выйти"
                FontSize="20"
                BorderBrush="White"
                Background="#622626"
                BorderThickness="2"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                Click="ExitBtn_Click"/>

        <Button x:Name="CreateBtn"
                Grid.Row="8"
                Grid.Column="2"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Height="40"
                Width="175"
                Content="Создать"
                FontSize="20"
                BorderBrush="White"
                Background="#264F62"
                BorderThickness="2"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"/>

        <Button x:Name="DeleteBtn"
                Grid.Row="9"
                Grid.Column="2"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Height="40"
                Width="175"
                Content="Удалить"
                FontSize="20"
                BorderBrush="White"
                Background="#264F62"
                BorderThickness="2"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"/>

        <Button x:Name="EditBtn"
                Grid.Row="10"
                Grid.Column="2"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Height="40"
                Width="175"
                Content="Изменить"
                FontSize="20"
                BorderBrush="White"
                Background="#264F62"
                BorderThickness="2"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"/>

        <Button x:Name="SubscriptionBtn"
                Grid.Row="8"
                Grid.Column="1"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Height="40"
                Width="175"
                Content="Абонементы"
                FontSize="20"
                BorderBrush="White"
                Background="#264F62"
                BorderThickness="2"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                Click="SubscriptionBtn_Click"/>

        <Button x:Name="ClientsBtn"
                Grid.Row="9"
                Grid.Column="1"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Height="40"
                Width="175"
                Content="Клиенты"
                FontSize="20"
                BorderBrush="White"
                Background="#264F62"
                BorderThickness="2"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                Click="ClientsBtn_Click"/>

        <Button x:Name="ScheduleBtn"
                Grid.Row="10"
                Grid.Column="1"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Height="40"
                Width="175"
                Content="Расписание"
                FontSize="20"
                BorderBrush="White"
                Background="#264F62"
                BorderThickness="2"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                Click="ScheduleBtn_Click"/>
    </Grid>

</Window>
