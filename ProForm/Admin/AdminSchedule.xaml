<Window x:Class="ProForm.AdminSchedule"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProForm"
        mc:Ignorable="d"
        Title="Администратор: Окно Расписания"
        Height="720"
        Width="1280"
        Background="#052F43"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanMinimize"
        Icon="/icons/program_icon.png" >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1.5*"/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <DataGrid x:Name="ScheduleTable"
                  Grid.ColumnSpan="3"
                  Grid.RowSpan="8"
                  Background="#264F62"
                  Foreground="White"
                  IsReadOnly="True"
                  CanUserReorderColumns="False" 
                  CanUserAddRows="False" 
                  CanUserDeleteRows="False" 
                  AutoGenerateColumns="False"
                  SelectionChanged="ScheduleTable_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Тренер" Binding="{Binding Trainers.TrainerSurname}"/>
                <DataGridTextColumn Header="Дата Работы" Binding="{Binding WorkDate}"/>
                <DataGridTextColumn Header="Дата Начала Работы" Binding="{Binding StartTime}"/>
                <DataGridTextColumn Header="Дата Конца Работы" Binding="{Binding EndTime}"/>
            </DataGrid.Columns>
        </DataGrid>

        <ComboBox x:Name="TrainerID"
                  Grid.Column="3"
                  Grid.Row="0"
                  Background="#264F62"
                  Foreground="Black"
                  VerticalAlignment="Center"
                  HorizontalAlignment="Center"
                  Width="250"
                  Height="40"
                  Padding="10"
                  materialDesign:HintAssist.Hint="Тренер"/>

        <TextBox x:Name="TrainerWorkDate"
                  Grid.Column="3"
                  Grid.Row="1"
                  Background="#264F62"
                  Foreground="Black"
                  VerticalAlignment="Center"
                  HorizontalAlignment="Center"
                  Width="250"
                  Height="40"
                  Padding="10"
                  materialDesign:HintAssist.Hint="Дата Работы"/>

        <TextBox x:Name="TrainerWorkStartTime"
                  Grid.Column="3"
                  Grid.Row="2"
                  Background="#264F62"
                  Foreground="Black"
                  VerticalAlignment="Center"
                  HorizontalAlignment="Center"
                  Width="250"
                  Height="40"
                  Padding="10"
                  materialDesign:HintAssist.Hint="Время Начала Работы"/>

        <TextBox x:Name="TrainerWorkEndTime"
                  Grid.Column="3"
                  Grid.Row="3"
                  Background="#264F62"
                  Foreground="Black"
                  VerticalAlignment="Center"
                  HorizontalAlignment="Center"
                  Width="250"
                  Height="40"
                  Padding="10"
                  materialDesign:HintAssist.Hint="Время Конца Работы"/>

        <Button x:Name="ExitBtn"
                Grid.Row="10"
                Grid.Column="3"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Height="40"
                Width="250"
                Content="Выйти"
                FontSize="20"
                BorderBrush="White"
                Background="#622626"
                BorderThickness="2"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                Click="ExitBtn_Click"/>

        <Button x:Name="CreateBtn"
                Grid.Row="8"
                Grid.Column="2"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Height="40"
                Width="175"
                Content="Создать"
                FontSize="20"
                BorderBrush="White"
                Background="#264F62"
                BorderThickness="2"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                Click="CreateBtn_Click"/>

        <Button x:Name="DeleteBtn"
                Grid.Row="9"
                Grid.Column="2"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Height="40"
                Width="175"
                Content="Удалить"
                FontSize="20"
                BorderBrush="White"
                Background="#264F62"
                BorderThickness="2"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                Click="DeleteBtn_Click"/>

        <Button x:Name="EditBtn"
                Grid.Row="10"
                Grid.Column="2"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Height="40"
                Width="175"
                Content="Изменить"
                FontSize="20"
                BorderBrush="White"
                Background="#264F62"
                BorderThickness="2"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                Click="EditBtn_Click"/>

        <Button x:Name="SubscriptionBtn"
                Grid.Row="8"
                Grid.Column="1"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Height="40"
                Width="175"
                Content="Абонементы"
                FontSize="20"
                BorderBrush="White"
                Background="#264F62"
                BorderThickness="2"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                Click="SubscriptionBtn_Click"/>

        <Button x:Name="ClientsBtn"
                Grid.Row="9"
                Grid.Column="1"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Height="40"
                Width="175"
                Content="Клиенты"
                FontSize="20"
                BorderBrush="White"
                Background="#264F62"
                BorderThickness="2"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                Click="ClientsBtn_Click"/>

        <Button x:Name="PaymentsBtn"
                Grid.Row="10"
                Grid.Column="1"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Height="40"
                Width="175"
                Content="Оплаты"
                FontSize="20"
                BorderBrush="White"
                Background="#264F62"
                BorderThickness="2"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                Click="PaymentsBtn_Click"/>
    </Grid>
</Window>
